{
  "name": "wgforge_frontend",
  "version": "1.0.1",
  "description": "WGForge Frontend course materials",
  "main": "lib/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.production.js",
    "clean": "rimraf dist",
    "deploy": "npm run build && surge -p .",
    "export": "spectacle-renderer --delay 3000",
    "lint": "eslint --ext .js,.jsx .",
    "start": "cross-env NODE_ENV=development node server.js",
    "spellcheck": "yaspeller-ci */presentation/*.js common/**/*.js *.md"
  },
  "author": "Formidable Labs <hello@formidable.com> (https://formidable.com)",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "normalize.css": "8.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "spectacle": "^5.3.0",
    "spectacle-renderer": "^0.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-react-inline-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@webpack-cli/migrate": "^0.1.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.18",
    "chalk": "^2.4.2",
    "closure-webpack-plugin": "^2.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.3",
    "file-loader": "^2.0.0",
    "google-closure-compiler": "^20190301.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "is-buffer": "^2.0.3",
    "lint-staged": "^8.1.5",
    "markdown-loader": "^4.0.0",
    "node-libs-browser": "^2.1.0",
    "prettier": "^1.16.4",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^4.3.11",
    "react-transform-catch-errors": "^1.0.2",
    "redbox-react": "^1.6.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "surge": "latest",
    "url-loader": "^1.1.1",
    "webpack": "4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-hot-middleware": "^2.24.2",
    "yaspeller-ci": "^1.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ],
      "*.{js,md}": "yaspeller-ci"
    },
    "ignore": [
      "docs/**/*.js"
    ]
  }
}
